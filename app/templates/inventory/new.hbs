{{#bs-form formLayout="vertical" model=this action="submit"}}
  {{bs-form-element  label="Name" placeholder="Name" property="name"}}
  {{bs-form-element  label="Isbn no." placeholder="Isbn no." property="isbn_number"}}
  <div class="form-group">
    {{bs-select  content=inventoryTypes selection=selectedType}}
  </div>
  <div class="form-group">
     {{ember-selectize content=userGroupsList multiple=true placeholder="share with group" optionValuePath="content.id" optionLabelPath="content.name" selection=selectedGroupsList}}
  </div>
    {{bs-button defaultText="Submit" type="primary" buttonType="submit"}}
  {{#link-to 'inventory' class="btn btn-default"}} Close {{/link-to}}
{{/bs-form}}
