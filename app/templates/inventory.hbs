<h3> My Items </h3>
<div class="col-md-4">
  {{#link-to 'inventory.new' class="btn btn-primary"}} Add new item {{/link-to}}
  {{outlet}}
</div>
<table class="table">
  <thead>
    <th> Name </th>
    <th> Type </th>
    <th> State </th>
    <th> Action </th>
  </thead>
  <tbody>
  {{#each item in pagedContent}}
  <tr>
    <td> {{item.name }}</td>
    <td> {{item.resource_type}}</td>
    <td> {{item.state}}</td>
    <td> 
      <a {{action 'editItem' item.id }}class="btn btn-primary"> Edit </a>
      <button {{action 'deleteItem' item.id}} class="btn btn-danger"> Delete</button>
      {{inventory-action item=item cancelIssue='cancelIssue' issueItem='issueItem'}}
    </td>
  </tr>
  {{/each}}
  </tbody>
</table>
{{page-numbers content=pagedContent}}